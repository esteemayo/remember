extends base

include _headLine

block content

    +headLine('Get in touch', 'Home', 'Contact')

    section#content
        iframe(src='https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d22864.11283411948!2d-73.96468908098944!3d40.630720240038435!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x89c24fa5d33f083b%3A0xc80b8f06e177fe62!2sNew+York%2C+NY%2C+USA!5e0!3m2!1sen!2sbg!4v1540447494452' width='100%' height='380' frameborder='0' style='border:0' allowfullscreen='')
        .container
            .row
                .span8
                    h4 Get in touch with us by filling contact form below
                    //- Without API
                    //- form#contactform.contactForm(action='/blogs/contact' method='POST' role='form')
                    //- API
                    form#contactform.contactForm
                        #sendmessage Your message has been sent. Thank you!
                        #errormessage
                        .row
                            .span4.field.form-group
                                input#name(type='text' name='name' placeholder='* Enter your full name' data-rule='minlen:4' data-msg='Please enter at least 4 chars')
                                .validation
                            .span4.field.form-group
                                input#email(type='text' name='email' placeholder='* Enter your email address' data-rule='email' data-msg='Please enter a valid email')
                                .validation
                            .span8.margintop10.field.form-group
                                input#subject(type='text' name='subject' placeholder='Enter your subject' data-rule='minlen:4' data-msg='Please enter at least 4 chars')
                                .validation
                            .span8.margintop10.field.form-group
                                textarea#message.input-block-level(rows='12' name='message' placeholder='* Your message here...' data-rule='required' data-msg='Please write something')
                                .validation
                                p
                                    button.btn.btn-color.margintop10.pull-left(type='submit') Send message
                                    span.pull-right.margintop20 * Please fill all required form field, thanks!
                .span4
                    .clearfix
                    aside.right-sidebar
                        .widget
                            h5.widgetheading
                                | Contact information
                                span
                            ul.contact-info
                                li
                                    label Address :
                                    |  Tinggi sekali tower Jl.Kemacetan timur
                                    br
                                    |  Jakarta selatan - Indonesia
                                li
                                    label Phone :
                                    | +62 123 456 78 / +62 123 456 79
                                li
                                    label Fax : 
                                    | +62 123 456 10 / +62 123 456 11
                                li
                                    label Email : 
                                    |  support@remember.io

