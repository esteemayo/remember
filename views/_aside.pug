aside.right-sidebar
    .widget
        form(action='/' method='GET')
            .input-append
                input#appendedInputButton.span2(type='search' name='search' placeholder='Type here')
                input.btn.btn-color(type="submit", value="Search")
                //- button.btn.btn-color(type='submit') Search
    .widget
        h5.widgetheading Categories
        ul.cat
            each category in categories
                li
                    i.icon-angle-right 
                    a(href=`/blogs/${category.slug}`)= category.name
            
    .widget
        h5.widgetheading Recent posts
        ul.cat
            each blog in recentPosts
                li
                    i.icon-angle-right 
                    a(href=`/blog/${blog.slug}`)= blog.title
            
    .widget
        h5.widgetheading Video widget
        .video-container
            iframe(src='http://player.vimeo.com/video/30585464?title=0&byline=0') &#x9;&#x9;&#x9;
    .widget
        h5.widgetheading Flickr photostream
        .flickr_badge
            script(type='text/javascript' src='http://www.flickr.com/badge_code_v2.gne?count=8&display=random&size=s&layout=x&source=user&user=34178660@N03')
        .clear
